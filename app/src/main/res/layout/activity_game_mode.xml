<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.mode.GameModeActivity"
        android:background="@drawable/bg">

    <com.th.game.component.Button
            android:id="@+id/playerVsComBtn"
            android:text="@string/player_vs_computer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:type="active"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/comVsComBtn"/>

    <com.th.game.component.Button
            android:id="@+id/exitBtn"
            android:text="@string/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:type="negative"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/comVsComBtn"/>

    <com.th.game.component.Button
            android:id="@+id/comVsComBtn"
            android:text="@string/computer_vs_computer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:type="active"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>